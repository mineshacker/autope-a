function closeModal(){const n=document.querySelector(".confirm-modal");n.style.display="none"}function openModal(){if(/Mobi|Android/i.test(navigator.userAgent)){const n=document.querySelector(".confirm-modal");n.style.display="block"}}function scrollToAnchor(n,t){const i=document.querySelector(n);if(i){const n=i.getBoundingClientRect().top+window.scrollY;window.scrollTo({top:n-t,behavior:"smooth"})}}const navLinks=document.querySelectorAll(".linker");navLinks.forEach(n=>{n.addEventListener("click",()=>{const t=n.parentNode.parentNode,i=t.querySelector(".is-active");i.classList.remove("is-active");n.classList.add("is-active")})});navLinks.forEach(n=>{n.addEventListener("click",t=>{t.preventDefault();const i=n.getAttribute("href");scrollToAnchor(i,100)})});