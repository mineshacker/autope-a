function showSlide(n){for(let n=0;n<totalSlides;n++)slides[n].classList.remove("active");slides[n].classList.add("active")}function updateProgressBars(){let n=Math.floor(currentIndex/(totalSlides/totalProgressBars));progressBarDivs.forEach((t,i)=>{i===n?(t.classList.add("active"),t.classList.remove("inactive"),t.style.flex="7"):(t.classList.add("inactive"),t.classList.remove("active"),t.style.flex="1",t.querySelector("div").style.width="100%",t.querySelector("div").style.transform="scaleX(1)")})}function startProgressBar(){function i(r){n||(n=r);const u=r-n,f=Math.min(u/slideDuration,1);progressBarDivs[t].querySelector("div").style.transform=`scaleX(${f})`;u<slideDuration?progressBarAnimation=requestAnimationFrame(i):(progressBarDivs[t].querySelector("div").style.transform="scaleX(1)",nextSlide())}let n,t=Math.floor(currentIndex/(totalSlides/totalProgressBars));updateProgressBars();progressBarAnimation=requestAnimationFrame(i)}function nextSlide(){currentIndex=(currentIndex+1)%totalSlides;showSlide(currentIndex);updateProgressBars();progressBarAnimation&&cancelAnimationFrame(progressBarAnimation);startProgressBar()}function prevSlide(){currentIndex=(currentIndex-1+totalSlides)%totalSlides;showSlide(currentIndex);updateProgressBars();progressBarAnimation&&cancelAnimationFrame(progressBarAnimation);startProgressBar()}function chooseSlide(n){currentIndex=n;showSlide(currentIndex);updateProgressBars();progressBarAnimation&&cancelAnimationFrame(progressBarAnimation);startProgressBar()}document.addEventListener("DOMContentLoaded",()=>{const r=document.querySelectorAll(".lazy"),u=new IntersectionObserver((n,t)=>{n.forEach(n=>{if(n.isIntersecting){const i=n.target,r=i.querySelector("picture"),f=r.querySelectorAll("source"),u=r.querySelector("img");f.forEach(n=>{n.srcset=n.getAttribute("data-srcset")});u.src=u.getAttribute("data-src");t.unobserve(i)}})});r.forEach(n=>{u.observe(n)});const n=document.querySelector(".lazy.active picture");if(n){const i=n.querySelectorAll("source"),t=n.querySelector("img");i.forEach(n=>{n.srcset=n.getAttribute("data-srcset")});t.src=t.getAttribute("data-src")}document.getElementById("nextSlide").addEventListener("click",nextSlide);document.getElementById("prevSlide").addEventListener("click",prevSlide);startProgressBar();let t,i;banners.addEventListener("touchstart",n=>{t=n.touches[0].clientX,i=n.touches[0].clientY},{passive:!0});banners.addEventListener("touchend",n=>{const u=n.changedTouches[0].clientX,f=n.changedTouches[0].clientY,r=u-t,e=f-i;Math.abs(r)>Math.abs(e)&&(r>50?prevSlide():r<-50&&nextSlide())},{passive:!0})});const banners=document.querySelector("#banners ul"),progressBarDivs=document.querySelectorAll(".progress-bar"),slides=banners.children,totalSlides=slides.length,totalProgressBars=progressBarDivs.length;let currentIndex=0;const slideDuration=6e3;let progressBarAnimation;